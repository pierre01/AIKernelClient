@LightsControllerAPI_HostAddress = https://localhost:5042
#@LightsAPIHost = https://localhost:5042
@LightsAPIHost = https://localhost:5042

# OpenAPI Description
GET {{LightsAPIHost}}/openapi/v1/openapi.json
###
# Get All the lights
GET {{LightsAPIHost}}/lights
###
# Get All the rooms
GET {{LightsAPIHost}}/rooms
###
# Get the House
GET {{LightsAPIHost}}/house
###

# Living Room Lights ------------------------------------------------
# Switch on the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
{
  "lightUpdates": [{
  "Id": 0,
  "State": "On"
},
{
  "Id": 1,
  "State": "On"
},
{
  "Id": 2,
  "State": "On"
}]}
###

# Adjust the color of the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
{
  "lightUpdates": [{
  "Id": 0,
   "Color": "FF0000"
},
{
  "Id": 1,
   "Color": "FF0000"
}]}
###

# reset the color of the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
{
  "lightUpdates": [{
  "Id": 0,
   "Color": "FFffff"
},
{
  "Id": 1,
   "Color": "ffffff"
}]}
###
# Adjust the brightness of the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
{
  "lightUpdates": [{
  "Id": 0,
  "Brightness": "50"
},
{
  "Id": 1,
  "Brightness": "50"
},
{
  "Id": 2,
  "Brightness": "50"
}]}
###
# Adjust back the brightness of the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
[{
  "LightId": 0,
  "Brightness": "100"
},
{
  "LightId": 1,
   "Brightness": "100"
},
{
  "LightId": 2,
  "Brightness": "100"
}]
###

# Switch off the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
[{
  "LightId": 0,
  "State": "Off"
},
{
  "LightId": 1,
  "State": "Off"
},
{
  "LightId": 2,
  "State": "Off"
}]
###

