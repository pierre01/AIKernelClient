@LightsControllerAPI_HostAddress = https://localhost:5042
@LightsAPIHost = https://localhost:5042

# OpenAPI Description
GET {{LightsAPIHost}}/openapi/v1/openapi.json
###
# Get All the lights
GET {{LightsControllerAPI_HostAddress}}/lights
###
# Get All the rooms
GET {{LightsControllerAPI_HostAddress}}/rooms
###

# Living Room Lights ------------------------------------------------
# Switch on the lights
PATCH {{LightsControllerAPI_HostAddress}}/lights
Content-Type: application/json
{
  "LightIds": [1, 2, 3],
  "State": "On"
}
###

# Adjust the color of the lights
PATCH {{LightsControllerAPI_HostAddress}}/lights
Content-Type: application/json
{
  "LightIds": [1, 2],
  "Color": "FF0000"
}
###

# reset the color of the lights
PATCH {{LightsControllerAPI_HostAddress}}/lights
Content-Type: application/json
{
  "LightIds": [1, 2],
  "Color": "FFFFFF"
}
###
# Adjust the brightness of the lights
PATCH {{LightsControllerAPI_HostAddress}}/lights
Content-Type: application/json
{
  "LightIds": [1, 2, 3],
  "Brightness": 50
}
###
# Adjust back the brightness of the lights
PATCH {{LightsControllerAPI_HostAddress}}/lights
Content-Type: application/json
{
  "LightIds": [1, 2, 3],
  "Brightness": 100
}
###

# Switch off the lights
PATCH {{LightsControllerAPI_HostAddress}}/lights
Content-Type: application/json
{
  "LightIds": [1, 2, 3],
  "State": "Off"
}
###

# Office Lights -----------------------------------------------------
# Switch on the lights
PUT {{LightsAPIHost}}/lights/9/switch/true
###
PUT {{LightsAPIHost}}/lights/10/switch/true
###
